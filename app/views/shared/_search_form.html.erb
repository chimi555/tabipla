<div class="search-form">
  <p class="search-form-tit">
    <i class="fas fa-search"></i>旅行プラン検索
  </p>
  <%= search_form_for @search, url: trips_path do |f|%>
    <div class="search-form-each">
      <p class="search-form-each-tit">国名から検索</p>
      <%= f.country_select :country_code_cont, include_blank: true, selected: "", class: "serch-field form-control" %>
    </div>
    <div class="search-form-each">
      <p class="search-form-each-tit">キーワードから検索</p>
      <%= f.search_field :name_or_content_or_country_code_or_area_or_tags_tag_name_cont_any, placeholder: "都市名、旅行カテゴリー名(温泉、海外...etc)など", class: "serch-field form-control" %>
    </div>
    <div class="search-form-each">
      <%= f.submit "検索", class: "btn" %>
    </div>
  <% end %>
</div>
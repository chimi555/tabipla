<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div>
    <% if current_user.persisted? && current_user.image? %>
      <%= image_tag current_user.image.thumb.to_s %>
      <label><%= f.check_box :remove_image %> 画像を削除</label>
    <% else %>
      <%= image_tag current_user.image.thumb.to_s %>
    <% end %>
    <div class="field">
      <%= f.label :image, "ユーザー画像を変更する"%>
      <%= f.file_field :image %>
    </div>
  </div>

  <div class="field">
    <%= f.label :user_name, 'ユーザーネーム' %> <br />
    <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>
  </div>

  <div class="field">
    <%= f.label :profile, "自己紹介" %> <br />
    <%= f.text_area :profile, autofocus: true, autocomplete: "profile", class: "form-control" %>
  </div>

  <div>非公開情報</div>
  
  <div class="field">
    <%= f.label :email, 'メールアドレス' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="actions">
    <%= f.submit "プロフィール更新" %>
  </div>
<% end %>

<%= link_to "パスワード変更",  password_edit_user_path(current_user), class:"btn" %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>

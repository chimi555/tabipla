<%= provide(:title, @user.user_name)%>
<div class="user-info center">
  <div class="container">
    <div class="user-info-box row">
      <div class="user-left col-md-5 col-sm-5 col-xs-12">
        <span class="user-img">
          <%= image_tag @user.image.thumb.to_s %>
        </span>
      </div>
      <div class="user-right col-md-7 col-sm-7 col-xs-12">
        <div class="row">
          <div class="user-name col-md-12 col-sm-12 col-xs-12">
            <%= @user.user_name %>
          </div>
          <% if current_user?(@user) %>
            <div class="user-editbtn col-md-12 col-sm-12 col-xs-12">
              <%= link_to "プロフィール編集",  edit_user_registration_path, class: "btn" %>
            </div>
          <% else %>
            <%= render 'follow_form', user: @user %>
          <% end %>
          <div class="user-prof col-md-12 col-sm-12 col-xs-12">
              <%= @user.profile %>
          </div>
          <div class="countbox col-md-12 col-sm-12 col-xs-12">
            <%= render 'shared/stats', user: @user %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="tabs">
  <input id="mytrip" type="radio" name="tab_item" checked>
  <label class="tab_item" for="mytrip">
    <span>MyTrip</span>
    <span class="count"><%= @user.trips.count %></span>
  </label>
  <input id="like_list" type="radio" name="tab_item">
  <label class="tab_item" for="like_list">
    <span>行きたいリスト</span>
    <span class="count"><%= @user_likes.count %></span>
  </label>
  <input id="following_list" type="radio" name="tab_item">
  <label class="tab_item" for="following_list">
    <span>フォロー中</span>
    <span class="count"><%= @following.count %></span>
  </label>
  <input id="followers_list" type="radio" name="tab_item">
  <label class="tab_item" for="followers_list">
    <span>フォロワー</span>
    <span class="count"><%= @followers.count %></span>
  </label>
  <div class="tab_content" id="mytrip_content">
    <div class="tab_content_description">
      <% if @user.trips.any? %>
        <ol class="trips">
          <%= render @trips %>
        </ol>
      <% else %>
        登録済みの旅行プランはまだありません
      <% end %>
    </div>
  </div>
  <div class="tab_content" id="like_list_content">
    <div class="tab_content_description">
      <% if @user_likes.any? %>
        <ol class="trips">
          <%= render @user_likes %>
        </ol>
      <% else %>
        行きたい！登録済の旅行プランはまだありません
      <% end %>
    </div>
  </div>
  <div class="tab_content" id="following_list_content">
    <div class="tab_content_description">
      <% if @following.any? %>
        <div class="users_box row">
          <ul class="users_follow">
            <%= render @following%>
          </ul>
        <%= paginate @following %>
        </div>
      <% else %>
        ユーザーはいません
      <% end %>
    </div>
  </div>
  <div class="tab_content" id="followers_list_content">
    <div class="tab_content_description">
      <% if @followers.any? %>
        <div class="users_box row">
          <ul class="users_follow">
            <%= render @followers%>
          </ul>
        <%= paginate @followers %>
        </div>
      <% else %>
        ユーザーはいません
      <% end %>
    </div>
  </div>
</div>


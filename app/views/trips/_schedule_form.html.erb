<%# スケジュールフォーム %>
<div class="form-out">
  <p class="form-tit">スケジュール</p>
  <div class="form-in">
    <%= trip_f.nested_fields_for :schedules, wrapper_tag: :div do |s| %>
      <div class="each-form-out">
        <span class="each-form-delete">
          <%= s.remove_nested_fields_link do %>
            <i class="fas fa-times"></i>
          <% end %>
        </span>
        <div class = 'form-group'>
          <%= s.select :action, [["出発:車", "car"], ["出発:電車", "train"], ["出発:飛行機", "plane"], ["出発:徒歩", "walk"], ["到着", "point"], [ "観光", "sightseeing"], ["食事", "eat"], ["宿泊", "stay"], ["その他" ,"other"]] %>
        </div>
        <div class="row">
          <div class="col-md-3">
            <div class = 'form-group'>
              <%= s.time_field :time, class: 'form-control', placeholder: "時", value: "schedules.time" %>
            </div>
          </div>
          <div class="col-md-9">
            <div class = 'form-group'>
              <%= s.text_field :place, placeholder: "場所名", class: 'form-control' %>
            </div>
          </div>
        </div>
        <div class="tripform-info">
          <%= s.text_area :memo,  placeholder: "memo", class: 'form-control' %>
        </div>
      </div>
    <% end %>
    <span class="each-form-add">
      <%= trip_f.add_nested_fields_link :schedules do %>
        <i class="fas fa-plus-circle"></i>
      <% end %>
    </span>
  </div>
</div>